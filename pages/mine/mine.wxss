/* pages/mine/mine.wxss */
page {
  height: 100%;
}
.bg-image, .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 32%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0,0,0,.2);
  backdrop-filter: blur(20px);
}
.avatar_image {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 32%;
  text-align: center;
  flex-direction: column;
}
.avatar_image .username {
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(0,0,0,.1);
  color: #ffffff;

}
/* 个人标签展示 */
.user_tags {
  padding: 16rpx 32rpx;
  display: flex;
}
.user_tags .tag_item {
  width: 33%;
  text-align: center;
}

/* 底部弹出栏 */
.popup {
  box-sizing: border-box;
  padding: 20rpx 50rpx;
  display: flex;
  flex-direction: column;
  /* background-color: aqua; */
  height: 100%;
  width: 100%;
}
.loginBtn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}