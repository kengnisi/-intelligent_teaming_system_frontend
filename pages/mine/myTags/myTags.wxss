/* pages/mine/myTags/myTags.wxss */
body{
  height: 100%;
}
page {
  height: 100%;
  background: -webkit-linear-gradient(bottom left,rgb(131,146,162),rgb(99,143,180));
  color: #c2ccd4;
}
.userTagPage {
  box-sizing: border-box;
  padding: 0 24rpx;
}
.tagListShow {
  display: flex;
  flex-wrap: wrap;
}
.option_item {
  background-color: rgba(255, 255, 255, .1);
  margin: 24rpx 0;
  padding: 24rpx;
  border-radius: 10rpx;
}
/* 选项父标签 */
.parTag {
  padding-bottom: 24rpx;
}
/* 子选项 */
.children {
  display: flex;
  flex-wrap: wrap;
}
.tag_item {
  width: 30%;
  text-align: center;
  padding: 10rpx 0;
  margin: 0 10rpx;
  margin-bottom: 24rpx;
}
.children .active {
  border-radius: 10rpx;
  background-color: rgba(99,143,180, .7);
}