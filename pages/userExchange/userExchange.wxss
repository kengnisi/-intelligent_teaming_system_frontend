/* pages/userExchange/userExchange.wxss */
/* pages/group/group.wxss */
page {
  background-color: #F7F7F7;
  --cell-vertical-padding: 10rpx
}
.nav {
  display: flex;
  justify-content: center;
}
.icon {
  padding: 0 10rpx;
}
.active {
  color: red;
}
/* 消息展示 */
.groupMessage {
  padding: 0 16rpx;
  box-sizing: border-box;
}
.messageInfo {
  display: flex;
  flex-direction: column;
}

/* 发布评论 */
.pub-comment {
  width: 100%;
  box-sizing: border-box;
  background-color: #F7F7F7;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.pub-left {
  flex: 1;
  box-sizing: border-box;
  background-color: #fff;
  color: #7F7F7F;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.pub-button {
  background-color: #2BA245;
  color: #ffffff;
  border: solid 1rpx #7F7F7F;
  border-radius: 10rpx;
  padding: 10rpx 15rpx;
  direction:ltr;
}
.other {
  border: 4rpx solid rgb(121, 117, 117);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 6rpx;
}
.top {
  display: flex;
  flex-direction: row;
  margin: 20rpx 5rpx 0 20rpx;
}
.top-2 {
  display: flex;
  flex-direction: row;
}
.top-right {
  display: flex;
  flex-direction: row;
  margin: 20rpx 20rpx 0 20rpx;
  justify-content: space-between;
}
.face {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.face-right {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.bot {
  margin-left: 150rpx;
  margin-right: 10rpx;
 
}

.bot-right {
  margin-right: 150rpx;
  margin-left: 10rpx;
  
  text-align: right;
}
.bot-text {
  background-color: #ffffff;
  padding: 10rpx 10rpx;
  border-radius: 20rpx;
}
.nick {
  margin-top: 20rpx;
}
.nick-right {
  margin-top: 20rpx;
}

/* 队伍详细页面 */
.team_detail_page {
  box-sizing: border-box;
  /* background-color: #fff; */
}

/* 队伍 */
.team_detail_page .detail {
  background-color: #fff;
  margin: 8rpx 0;
  padding: 8rpx 32rpx;
}
.detail .detail_name {
  font-size: 150%;
}
.detail .team_id {
  font-size: 80%;
  color: rgb(121, 117, 117);
  padding: 18rpx 0;
}

/* 队长 */
.team_detail_page .team_leader {
  background-color: #fff;
  padding: 8rpx 32rpx;
  margin: 8rpx 0;
}
.team_leader .leader_context {
  padding-top: 24rpx;
  display: flex;
  align-items: center;
}
.leader_context .createrName {
  padding-left: 16rpx;
}

/* 队员 */
.team_detail_page .team_order {
  background-color: #fff;
  margin: 24rpx 0;
  padding: 8rpx 0;
  box-sizing: border-box;
}
.team_order .order_context {
  display: flex;
  margin-top: 24rpx;
}
.team_order .item {
  width: 20%;
  font-size: 80%;
  color: rgb(121, 117, 117);
  text-align: center;
}